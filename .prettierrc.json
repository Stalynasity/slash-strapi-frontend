{
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": ["*.ts", "*.mts", "*.d.ts", "*.js", "*.jsx"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.html", "*.component.html"],
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "parser": "json",
                "tabWidth": 2
            }
        },
        {
            "files": ["*.md", "*.mdx"],
            "options": {
                "parser": "markdown",
                "proseWrap": "always"
            }
        }
    ]
}
